{
  "name": "@digilent/digilent-auth-js",
  "version": "1.0.0",
  "description": "Digilent wrapper module for user authentication using AWS Cognito",
  "main": "index.js",
  "scripts": {
    "test": "jasmine spec/core.js",
    "prepublish": "npm run build",
    "clean": "rm -rf dist && rm -rf bundle",
    "copyCss": "cp -f src/*.css ./bundle && cp -f src/*.css ./dist",
    "docs": "typedoc --out ./docs ./src",
    "build": "npm run clean && tsc && webpack bundleHelper.js ./bundle/digilent-auth-js.js && npm run copyCss && npm run docs"
  },
  "author": "Digilent",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^7.0.12",
    "jasmine": "^2.8.0",
    "jasmine-node": "^1.14.5",
    "syncprompt": "^2.0.0",
    "typescript": "2.0.10",
    "uglify-js": "^3.0.28",
    "webpack": "^3.5.3"
  },
  "dependencies": {
    "amazon-cognito-identity-js": "^1.19.0",
    "aws-sdk": "^2.104.0"
  }
}
